<Window x:Class="WpfTutorialSamples.ListControls.ComboBoxCustomContentSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="ComboBoxCustomContentSample" Height="150" Width="200">
    <StackPanel Margin="10">
        <ComboBox>
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/bullet-red.ico" Width="16" Height="16"/>
                    <TextBox Foreground="Red">Red</TextBox>
                </StackPanel>                
            </ComboBoxItem>
            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/bullet-green.ico" Width="16" Height="16"/>
                    <TextBox Foreground="Green">Green</TextBox>
                </StackPanel>
            </ComboBoxItem>

            <ComboBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/bullet-blue.ico" Width="16" Height="16"/>
                    <TextBox Foreground="CadetBlue">Blue</TextBox>
                </StackPanel>
            </ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
