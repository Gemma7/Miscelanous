<Window x:Class="WpfTutorialSamples.BasicControls.PasswordBoxSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="PasswordBoxSample" Height="300" Width="300">
    <StackPanel>
        <Label>Text:</Label>
        <TextBox/>
        <Label>Password:</Label>
        <PasswordBox PasswordChar="*" MaxLength="6"/>
    </StackPanel>
</Window>
