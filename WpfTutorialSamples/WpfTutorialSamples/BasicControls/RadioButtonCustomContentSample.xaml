<Window x:Class="WpfTutorialSamples.BasicControls.RadioButtonCustomContentSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="RadioButtonCustomContentSample" Height="300" Width="300">
    <StackPanel>
        <Label FontWeight="Bold">Are you ready?</Label>
        <RadioButton>
            <WrapPanel>
                <Image Source="/Resources/accept.ico"
                       Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Yes" Foreground="Green"/>
            </WrapPanel>
        </RadioButton>
        <RadioButton Margin="0,5">
            <WrapPanel>
                <Image Source="/Resources/cancel.ico"
                       Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="No" Foreground="Red"/>
            </WrapPanel>
        </RadioButton>
        <RadioButton>
            <WrapPanel>
                <Image Source="/Resources/system-help.ico"
                       Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Maybe" Foreground="Gray"/>
            </WrapPanel>
        </RadioButton>
    </StackPanel>
</Window>
